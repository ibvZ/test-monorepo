{
  "name": "ibvz/monorepo",
  "description": "Монорепозиторий для пакетов",
  "type": "project",
  "repositories": [
    {
      "type": "path",
      "url": "./*",
      "options": {
        "symlink": true
      }
    }
  ],
  "require": {
    "ibvz/objects": "dev-master",
    "ibvz/users": "dev-master"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "master": "1.0.x-dev"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer install --working-dir=objects",
      "@composer install --working-dir=users"
    ],
    "post-update-cmd": [
      "@composer update --working-dir=objects",
      "@composer update --working-dir=users"
    ]
  }
}